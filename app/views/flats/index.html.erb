<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= @flats.length %> flats.</p>
    </div>
  </div>

  <div class="row">
  <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.image %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">

              <h4><%= link_to flat.name, flat_path(flat) %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%# <a href="/flats/6507">More info</a> %>
            <%= link_to "Edit this flat", edit_flat_path(flat)%>
            <%# <a class="ms-3 text-warning" href="/flats/6507/edit">Edit</a> %>
            <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
            <%# <a data-turbo-method="delete" data-turbo-confirm="Are you sure?" class="ms-3 text-danger" href="/flats/6507">Remove</a> %>
          </div>
        </div>
      </div>
  <% end %>

</div>
